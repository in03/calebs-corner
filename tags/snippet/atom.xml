        <title>Dock Tweaks</title>
        <published>2024-12-09T00:00:00+00:00</published>
        <updated>2024-12-09T00:00:00+00:00</updated>
        
        <author>
          <name>
            Caleb Trevatt
          </name>
        </author>
        
        <link rel="alternate" type="text/html" href="https://calebtrevatt.com/snippets/dock-adjustments/"/>
